<p id="notice"><%= notice %></p>

<%= link_to 'New Artist', new_artist_path %>

<h1>Listing Artists</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "Name" %></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.name, artist %></td>
      </tr>
    <% end %>
  </tbody>
</table>
