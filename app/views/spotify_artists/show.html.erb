<h1><%= @artist.name %></h1>

<p>
  <strong>Popularity:</strong>
  <%= @artist.popularity %>
</p>

<p>
  <strong>Genres:</strong>
  <% @artist.genres.each do |genre| %>
    <%= genre %>,
  <% end %>
</p>

<h2>Albums</h2>
<% @artist.albums(country: 'US').each do |album| %>
 <h3><%= "#{album.name} #{album.release_date}" %></h3>
 <ul>
   <% album.tracks.each do |track| %>
     <li>
       <%= link_to "#{track.name} (#{distance_of_time_in_words(track.duration_ms / 1000)})", track.preview_url %>
     </li>
   <% end %>
 </ul>
<% end %>
