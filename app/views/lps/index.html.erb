<p id="notice"><%= notice %></p>

<%= link_to 'New Lp', new_artist_lp_path(@artist) %>

<h1><%= link_to @artist.name, artist_path(@artist) %>'s Lps</h1>
<h2>
  <%= page_entries_info @lps %>
  <% if params[:i].present? %>
    that start with
    <%= params[:i] %>
  <% end %>
</h2>


<nav>
  Filter: <%= alphabet_filter "Lp", @artist %>
</nav>

<% if @lps.empty? %>
  None
<% else %>
  <table>
    <thead>
      <tr>
	<th><%= sortable "Title" %></th>
      </tr>
    </thead>

    <tbody>
      <% @lps.each do |lp| %>
	<tr>
	  <td><%= link_to lp.title, lp %></td>
	</tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @lps %>
<% end %>
