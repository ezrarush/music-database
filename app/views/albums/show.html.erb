<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_album_path(@album) %>
<%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', albums_path %>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Artist:</strong>
  <%= link_to @album.artist.try(:name), artist_path(@album.artist) %>
</p>

<p>
  <strong>Genres:</strong>
  <% if @album.genres.empty? %>
    None
  <% else %>
    <ul>
      <% @album.genres.each do |genre| %>
        <li><%= link_to genre.name, genre_path(genre) %></li>
      <% end %>
    </ul>
  <% end %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @album.condition %>
</p>

<p>
  <strong>Type:</strong>
  <%= @album.type %>
</p>

<p>
  <strong>Note:</strong>
  <%= @album.note %>
</p>
