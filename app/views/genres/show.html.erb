<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @genre.name %>
</p>

<p>
  <strong>Albums:</strong>
  <ul>
    <% @genre.albums.order(:title).each do |album| %>
      <li>
	<%= link_to "#{album.title} - #{album.artist.name} (#{album.type})", album %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_genre_path(@genre) %> |
<%= link_to 'Destroy', @genre, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', genres_path %>
