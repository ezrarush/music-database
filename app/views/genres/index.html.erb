<p id="notice"><%= notice %></p>

<%= link_to 'New Genre', new_genre_path %>


<h2>
  Displaying <%= pluralize @genres.count, 'genre' %>
  <% if params[:i].present? %>
    that start with
    <%= params[:i] %>
  <% end %>
</h2>


<nav>
  Filter: <%= alphabet_filter "Genre" %>
</nav>

<% if @genres.empty? %>
  None
<% else %>
  <table>
    <thead>
      <tr>
	<th><%= sortable "Name" %></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
	<tr>
	  <td><%= link_to genre.name, genre %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
<% end %>
