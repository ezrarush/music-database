<p id="notice"><%= notice %></p>

<%= link_to 'New Genre', new_genre_path %>

<h1>Listing <%= @genres.count %> Genres</h1>

<nav>
  Filter: <%= alphabet_filter "Genre" %>
</nav>

<% if @genres.empty? %>
  None
<% else %>
  <table>
    <thead>
      <tr>
	<th><%= sortable "Name" %></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
	<tr>
	  <td><%= link_to genre.name, genre %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
<% end %>
